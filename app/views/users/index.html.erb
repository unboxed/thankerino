<div id="community">
  <div class="inner">
    <h2><%= image_tag('scoreboard.jpg', :alt => 'Community') %></h2>
    <ul>

    <% @users.each do |user| %>
     <li><%= image_tag('avatar.jpg', :alt => 'thumb') %><p><%= link_to user.name, user_path(user) %>: <%=h user.points %> points</p></li>
    <% end %>
    </ul>
  </div>
</div>