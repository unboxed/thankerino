<div id="profile">
  <div class="inner">
    <h2><%= image_tag('my_profile.jpg', :alt => 'Community') %></h2>
    <ul class="profile_info">
      <li><%= image_tag('avatar.jpg', :alt => 'thumb') %>
      <p>Name: <%=h @user.name %><br />
      Total points: <%=h @user.points %></p></li>
      <li>
      <% if current_user == @user %>
        <%= link_to 'Edit', edit_user_path(@user) %>
      <% end  %>
      </li>
    </ul>
    

    <h2><%= image_tag('my_appreciation.jpg', :alt => 'my appreciation') %></h2>
    <ul class="thanks_history">
    <% thanks_for_user(@user).reverse.each do |thank| %>
     <li><%= image_tag('avatar.jpg', :alt => 'thumb') %><p>Thanks to <%= link_to target_user(thank), user_path(thank.to_user) %> <%=h thank.message %> By&nbsp;<%= link_to source_user(thank), user_path(thank.from_user) %></p></li>
    <% end %>
    </ul>

  </div>
</div>

