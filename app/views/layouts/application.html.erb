<!DOCTYPE html>
<html>
<head>
  <title>Thankerino</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery-ui-1.8.4.custom.min' %>

  <% if user_signed_in? %>
    <%= javascript_include_tag 'thanks' %>
  <% end %>

  <%= csrf_meta_tag %>
</head>
<body>
<div id="main_border">
  <div id="inner_border">
    <% if !user_signed_in? %>
      <%= link_to "REGISTER", new_account_path %> |
      <%= link_to "LOGIN",  new_session_path(resource_name) %>
    <% end %>
    
    <% if  user_signed_in? %>
      <div id="menu">
        <%= link_to "HOME", root_path %>
        <%= link_to "ME", account_path %>
        <%= link_to "SCOREBOARD", root_path %>
        <%= link_to "COMMUNITY", users_path %>
      </div>
    <% end %>

    <p style="color: green"><%= flash[:notice] %></p>
    <div id="content">
      <%= yield  %>
    </div>
  </div>
</div>
<% if user_signed_in? %>
  <div id="footer_menu">
    <%= link_to "HOME", root_path %>
    <%= link_to "ME", account_path %>
    <%= link_to "SCOREBOARD", root_path %>
    <%= link_to "COMMUNITY", root_path %>
  </div>
<% end %>

</body>
</html>
