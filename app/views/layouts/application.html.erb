<!DOCTYPE html>
<html>
<head>
  <title>Thankerino</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery-ui-1.8.4.custom.min' %>

  <%= feedback_includes %>

  <% if user_signed_in? %>
    <%= javascript_include_tag 'thanks' %>
  <% end %>

  <%= csrf_meta_tag %>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-9809806-5']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
</head>
<body>
<div id="main_border">
  <%= feedback_tab(:position => 'left') %>

   
  <%- flash.each do |name, msg| -%>
  <div id="flash_<%= name %>"><%= msg %></div>
  <%- end -%>
  <div id="inner_border">
    <% if !user_signed_in? %>
      <%= link_to image_tag('login_btn.jpg', :alt => 'login'), new_session_path(resource_name), :class => "login_btn" %>
    <% end %>
    
    <% if  user_signed_in? %>
      <%= link_to image_tag('logout.jpg', :alt => 'logout'), destroy_user_session_path(@user), :class => "logout" %>
      <div id="menu">
        <%= render 'layouts/menu' %>
      </div>
    <% end %>
    <div id="content">
      <%= yield  %>
    </div>
  </div>
</div>
<% if user_signed_in? %>
  <div id="footer_menu">
    <%= render 'layouts/menu' %>
  </div>
<% end %>

</body>
</html>
