<!DOCTYPE html>
<html>
<head>
  <title>ThankYouNew</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'jquery-1.4.2.min', 'jquery-ui-1.8.4.custom.min', 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="main_border">
  <div id="inner_border">
    <% if !current_user %>
      <%= link_to "REGISTER", new_account_path %> |
      <%= link_to "LOGIN", new_user_session_path %>
    <% else %>
      <%= link_to "LOGOUT", user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?" %>
    <% end %>
    
    <% if current_user %>
      <div id="menu">
        <%= link_to "HOME", root_path %>
        <%= link_to "ME", account_path %>
        <%= link_to "SCOREBOARD", root_path %>
        <%= link_to "COMMUNITY", root_path %>
      </div>
    <% end %>

    <p style="color: green"><%= flash[:notice] %></p>
    <div id="content">
      <%= yield  %>
    </div>
  </div>
</div>
<% if current_user %>
  <div id="footer_menu">
    <%= link_to "HOME", root_path %>
    <%= link_to "ME", account_path %>
    <%= link_to "SCOREBOARD", root_path %>
    <%= link_to "COMMUNITY", root_path %>
  </div>
<% end %>

</body>
</html>
